{
  "__inputs": [
    {
      "name": "DS_LOKI",
      "label": "Loki",
      "description": "Loki data source",
      "type": "datasource",
      "pluginId": "loki",
      "pluginName": "Loki"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "9.4.3"
    },
    {
      "type": "panel",
      "id": "logs",
      "name": "Logs",
      "version": ""
    },
    {
      "type": "datasource",
      "id": "loki",
      "name": "Loki",
      "version": "2.7.1"
    }
  ],
  "templating": {
    "list": [
      {
        "name": "container_name",
        "type": "query",
        "datasource": "${DS_LOKI}",
        "query": "label_values({job=\"docker\"}, container_name)",
        "refresh": 2,
        "hide": 0,
        "label": "Container Name",
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      }
    ]
  },
  "panels": [
    {
      "type": "logs",
      "title": "Logs for $container_name",
      "datasource": {
        "type": "loki",
        "uid": "DS_LOKI"
      },
      "targets": [
        {
          "expr": "{container_name=\"$container_name\"}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 9,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "options": {
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true
      },
      "repeat": "container_name",
      "repeatDirection": "h"
    }
  ],
  "title": "Loki Docker Logs by Container",
  "editable": true
}
